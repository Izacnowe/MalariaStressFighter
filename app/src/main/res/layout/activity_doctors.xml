<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.paradise.malariastressfighter.Others.Doctors">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fill in Doctor's Details"
                android:textColor="#f4046c"
                android:textSize="35dp"
                android:padding="10dp"
                android:textAlignment="center"
                />


            <EditText
                android:id="@+id/code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:ems="10"
                android:hint="Enter Doctor's Phone Number"
                android:textSize="25dp"
                android:layout_marginTop="10dp"

                android:textColorHint="#200909"

                android:layout_alignParentEnd="true" />
            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:ems="10"
                android:hint=" Enter Doctor's Name"
                android:textSize="25dp"
                android:layout_marginTop="10dp"
                android:textColorHint="#200909"
                android:inputType="textPersonName"
                android:layout_alignParentEnd="true" />


            <EditText
                android:id="@+id/contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="10dp"
                android:hint="Enter Doctor's Hospital"
                android:textSize="25dp"
                android:textColorHint="#200909"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:hint="Enter Doctor's Speciality"
                android:textSize="25dp"
                android:layout_marginTop="10dp"

                android:textColorHint="#200909"/>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView"
                    android:textSize="16dp"
                    android:layout_marginLeft="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="79dp"
                    android:text="Back"
                    android:onClick="Backs"
                    />

                <Button
                    android:id="@+id/sellticket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView"
                    android:textSize="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="79dp"
                    android:text="Submit"

                    />
                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView"
                    android:textSize="16dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="79dp"
                    android:text="Cancel"
                    android:onClick="cancl"
                    />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
    </LinearLayout>
